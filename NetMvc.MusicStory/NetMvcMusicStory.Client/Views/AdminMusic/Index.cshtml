                form.on('submit(data-search-btn)', function (data) {
                    var musicname = data.field.name;
                    if (data == '') {
                        table.reload('currentTableId', 'data');
                        return false;
                    }
                    //执行搜索重载表格
                    table.reload('currentTableId', {
                        url: "GetOneMusic", //搜索接口
                        page: {
                            curr: 1
                        }
                        , where: {
                            name: musicname,
                        }
                    });

                    return false;
                });

            /**
             * toolbar监听事件
             */
            //添加
            table.on('toolbar(currentTableFilter)', function (obj) {
                if (obj.event === 'add') {
                    var path;
                    layer.open({
                        type: 1,
                        area: ['50%', '80%'],
                        title: '添加音乐',
                        shade: false,//父窗体不可点击
                        shadeClose: true,
                        content: $('#addAdminUser').html(),
                        cancel: function (index, layero) {
                            $.post("/FileUpload/DeleteFile", { 'path': path }, function (res) {
                                if (res.code == 0) {
                                    layer.msg("已取消操作");
                                }
                            }, 'json');
                        }
                        , success: function (layero, dIndex) {


                            //音乐文件上传
                            var uploadInst = upload.render({
                                elem: '#file'               //绑定元素
                                , url: '/FileUpload/UploadMusic' //上传接口
                                , accept: 'file'	        //允许上传的文件类型
                                , done: function (res) {
                                    path = res.musicurl;
                                    form.val('modeladd', res);//回显数据
                                }
                            });

                            $.ajax({
                                url: "SelectMenu",
                                dataType: 'json',
                                type: 'post',
                                success: function (data) {
                                    $.each(data, function (index, item) {
                                        $('#album').append(new Option(item.Name, item.Id));
                                    });
                                    layui.form.render("select");
                                }
                            });

                            // 表单提交事件
                            form.on('submit(saveBtn)', function (data) {
                                layer.load(2);
                                $.post("CreateMusic", data.field, function (res) {
                                    layer.closeAll('loading');
                                    if (res.code == 0) {
                                        layer.close(dIndex);
                                        layer.msg(res.msg, { icon: 1 });
                                        table.reload('currentTableId');
                                    } else {
                                        layer.msg(res.msg, { icon: 2 });
                                    }
                                }, 'json');
                                return false;
                            });

                            var fileDom = document.getElementById("file");
                            var previewDom = document.getElementById("preview");
                            //如果不为空就给src赋值
                            //if (data.MusicUrl !== null) {
                            //    previewDom.src = data.MusicUrl;
                            //}
                            var v = document.getElementById("val");
                            fileDom.addEventListener("change", e => {
                                var file = fileDom.files[0];

                                var fileReader = new FileReader();
                                fileReader.onload = e => {
                                    previewDom.src = e.target.result;
                                };
                                fileReader.readAsDataURL(file);
                            });


                        }
                    });

                }
            });


            table.on('tool(currentTableFilter)', function (obj) {
                var data = obj.data;
                var path;
                if (obj.event === 'photograph') {

                    layer.open({
                        type: 1,
                        area: ['50%', '80%'],
                        title: '编辑音乐',
                        shade: false,//父窗体不可点击
                        //shadeClose: true,
                        content: $('#editAdminUser').html(),
                        cancel: function (index, layero) {

                            $.post("/FileUpload/DeleteFile", { 'path': path }, function (res) {
                                if (res.code == 0) {
                                    layer.msg("已取消操作");
                                }
                            }, 'json');
                        }
                        , success: function (layero, dIndex) {
                            form.val('modeleditAdmin', data);//回显数据

                            //音乐文件上传
                            var uploadInst = upload.render({
                                elem: '#file'               //绑定元素
                                , url: '/FileUpload/UploadMusic' //上传接口
                                , accept: 'file'	        //允许上传的文件类型
                                , done: function (res) {
                                    path = res.musicurl;
                                    form.val('modeleditAdmin', res);//回显数据
                                }
                            });

                            $.ajax({
                                url: "SelectMenu",
                                dataType: 'json',
                                type: 'post',
                                success: function (data) {
                                    $.each(data, function (index, item) {
                                        $('#album').append(new Option(item.Name, item.Id));
                                    });
                                    layui.form.render("select");
                                }
                            });

                            // 表单提交事件
                            form.on('submit(saveBtn)', function (data) {
                                layer.load(2);
                                $.post("EditMusic", data.field, function (res) {
                                    layer.closeAll('loading');
                                    if (res.code == 0) {
                                        layer.close(dIndex);
                                        layer.msg(res.msg, { icon: 1 });
                                        table.reload('currentTableId');
                                    } else {
                                        layer.msg(res.msg, { icon: 2 });
                                    }
                                }, 'json');
                                return false;
                            });

                            var fileDom = document.getElementById("file");
                            var previewDom = document.getElementById("preview");
                            //音乐预览
                            if (data.MusicUrl !== null) {
                                previewDom.src = data.MusicUrl;
                            }
                            fileDom.addEventListener("change", e => {
                                var file = fileDom.files[0];

                                var fileReader = new FileReader();
                                fileReader.onload = e => {
                                    previewDom.src = e.target.result;
                                };
                                fileReader.readAsDataURL(file);
                            });

                        }
                    });

                    return false;
                } else if (obj.event === 'addlrc') {
                    layer.open({
                        type: 1,
                        area: ['50%', '80%'],
                        title: '歌词导入',
                        shade: false,//父窗体不可点击
                        shadeClose: true,
                        content: $('#AddLrcData').html(),
                        success: function (layero, dIndex) {
                            form.val('modeleditAdmin', data);//回显数据


                            // 表单提交事件
                            form.on('submit(saveBtn)', function (data) {
                                layer.load(2);
                                $.post("CreateLrcFile", data.field, function (res) {
                                    layer.closeAll('loading');
                                    if (res.code == 0) {
                                        layer.close(dIndex);
                                        layer.msg(res.msg, { icon: 1 });
                                        table.reload('currentTableId');
                                    } else {
                                        layer.msg(res.msg, { icon: 2 });
                                    }
                                }, 'json');
                                return false;
                            });

                        }
                    });

                } else if (obj.event === 'delete') {
                    layer.confirm('确认删除 ' + data.Name + " ?", function (index) {
                        $.post("Delete", { 'id': data.Id }, function (res) {
                            if (res.code == 0) {
                                obj.del();
                                layer.msg(res.msg, { icon: 1 });//提示说明
                                table.reload('currentTableId'); //重载表格
                                layer.close(index);//再执行关闭
                            } else {
                                layer.msg(res.msg, { icon: 2 });
                            }
                        }, 'json');
                    });
                }
            });
        });
    </script>
</body>
</html>