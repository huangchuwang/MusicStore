@Styles.Render("~/Content/layui/css")
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <style>
        #modeleditAdmin {
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="layuimini-container">
        <div class="layuimini-main">
            <fieldset class="table-search-fieldset">
                <legend>搜索信息</legend>
                <div style="margin: 10px 10px 10px 10px">
                    <form class="layui-form layui-form-pane" action="">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">音乐名称</label>
                                <div class="layui-input-inline">
                                    <input type="text" name="name" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <button type="submit" class="layui-btn layui-btn-primary" lay-submit
                                        lay-filter="data-search-btn">
                                    <i class="layui-icon"></i> 搜 索
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>
            <!-- 编辑页 -->
            <script type="text/html" id="editAdminUser">
                <form id="modeleditAdmin" lay-filter="modeleditAdmin" style="padding-top:40px" class="layui-form model-form">
                    <div class="layui-form-item">
                        <input type="text" name="Id" hidden>
                        <input type="text" name="musicurl" hidden>
                        <div class="layui-form-item">
                            <label class="layui-form-label">音乐名称</label>
                            <div class="layui-input-block">
                                <input type="text" name="Name" placeholder="请输入" lay-verify="name" class="layui-input">
                            </div>
                        </div>

                        <div class="layui-form-item">
                            <label class="layui-form-label">所属专辑</label>
                            <div class="layui-input-block" style="width: 40%;">
                                <select id="album" lay-verify="required" name="albumid">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>

                        <div class="layui-form-item">
                            <label class="layui-form-label">上传音乐文件</label>
                            <div class="layui-upload-list">
                                <audio controls="controls" id="preview">
                                    Your browser does not support the audio element.
                                </audio>
                            </div>
                            <div style="text-align:center">
                                <input type="file" name="file" id="file" />
                            </div>
                        </div>

                        <div class="layui-form-item">
                            <label class="layui-form-label">音乐简介</label>
                            <div class="layui-input-block">
                                <textarea name="Description" lay-verify="description" placeholder="请输入" class="layui-textarea"></textarea>
                            </div>
                        </div>

                        <div class="layui-form-item">
                            <div style="text-align:center">
                                <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认修改</button>
                            </div>
                        </div>
                    </div>
                </form>
            </script>

            <!-- 添加 -->
            <script type="text/html" id="addAdminUser">
                <form id="modeleditAdmin" lay-filter="modeladd" style="padding-top:40px" class="layui-form model-form">
                    <input type="text" name="musicurl" hidden>
                    <div class="layui-form-item">
                        <label class="layui-form-label">音乐名称</label>
                        <div class="layui-input-block">
                            <input type="text" name="name" placeholder="请输入" lay-verify="name" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">所属专辑</label>
                        <div class="layui-input-block" style="width: 40%;">
                            <select id="album" lay-verify="required" name="albumid">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">上传音乐文件</label>
                        <div class="layui-upload-list">
                            <audio controls="controls" id="preview">
                                Your browser does not support the audio element.
                            </audio>
                        </div>
                        <div style="text-align:center">
                            <input type="file" name="file" id="file" />
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">音乐简介</label>
                        <div class="layui-input-block">
                            <textarea name="description" lay-verify="description" placeholder="请输入" class="layui-textarea"></textarea>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div style="text-align:center">
                            <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认添加</button>
                        </div>
                    </div>
                </form>
            </script>
            <!-- 导入歌词数据 -->
            <script type="text/html" id="AddLrcData">
                <form id="modeleditAdmin" lay-filter="modeleditAdmin" style="padding-top:40px" class="layui-form model-form">
                    <input type="text" name="Id" hidden  >
                    <input type="text" name="Lrc" hidden>
                    
                    @*<div class="layui-form-item">
                        <label class="layui-form-label">上传音乐文件</label>
                        <div class="layui-upload-list">
                            <audio controls="controls" id="preview">
                                Your browser does not support the audio element.
                            </audio>
                        </div>
                        <div style="text-align:center">
                            <input type="file" name="file" id="file" />
                        </div>
                    </div>*@

                    <div class="layui-form-item">
                        <label class="layui-form-label">歌词内容</label>
                        <div class="layui-input-block">
                            <textarea name="LrcContent" style="height:500px;" lay-verify="description" placeholder="请输入标准的LRC歌词文件内容" class="layui-textarea"></textarea>
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div style="text-align:center">
                            <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认导入</button>
                        </div>
                    </div>
                </form>
            </script>
            <script type="text/html" id="toolbarDemo">
                <div class="layui-btn-container">
                    <button class="layui-btn layui-btn-normal layui-btn-sm data-add-btn" lay-event="add"> <i class="layui-icon">&#xe654;</i>添加音乐 </button>
                </div>
            </script>
            <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>
            <script type="text/html" id="currentTableBar">
                <a class="layui-btn layui-btn-sm data-count-edits" lay-event="addlrc"><i class="layui-icon"></i>导入歌词</a>
                <a class="layui-btn layui-btn-sm data-count-edits" lay-event="photograph"><i class="layui-icon"></i>修改音乐</a>
                <a class="layui-btn layui-btn-sm layui-btn-danger data-count-delete" lay-event="delete"><i class="layui-icon">&#xe640;</i>删除</a>
            </script>
        </div>
    </div>
    @Scripts.Render("~/Content/layui/js")
    <script>
            layui.use(['jquery', 'upload', 'form', 'laydate', 'table'], function () {
                var $ = layui.jquery,
                    form = layui.form,
                    table = layui.table;
                var laydate = layui.laydate;
                var upload = layui.upload;
                form.render();

                table.render({
                    elem: '#currentTableId',
                    url: "SelectList",
                    toolbar: '#toolbarDemo',
                    defaultToolbar: ['filter', 'exports', 'print', {
                        title: '提示',
                        layEvent: 'LAYTABLE_TIPS',
                        icon: 'layui-icon-tips'
                    }],
                    cols: [[
                        { type: "checkbox", width: 50 },
                        { field: 'Name', width: 150, title: '音乐名称' },
                        { field: 'AlbumName', width: 100, title: '专辑歌手' },
                        { field: 'Description', width: 200, title: '音乐简介' },
                        { field: 'Create_time', width: 200, title: '添加时间' },
                        { title: '操作', minWidth: 50, templet: '#currentTableBar', fixed: "right", align: "center" }
                    ]],
                    limits: [5, 10, 15, 20, 25, 50, 100],
                    limit: 15,
                    page: true,
                    skin: 'line'
                });

            //自定义数据验证

