            //form.verify({
            //    name: function (value) {
            //        if (value == "") {
            //            return '专辑名称不能为空';
            //        }
            //        if (!new RegExp("^[a-zA-Z0-9_\u4e00-\u9fa5\\s·]+$").test(value)) {
            //            return '专辑名称不能有特殊字符';
