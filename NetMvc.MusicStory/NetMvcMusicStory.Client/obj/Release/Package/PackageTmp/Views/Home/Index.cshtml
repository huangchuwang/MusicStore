        //初始化
        $(function () {

            Initdata();
            loginInit();
            Limit();
        });

        //轮播图
        function Slideshow(datas) {
            $trs = '';
            $.each(datas, function (i, item) {
                $trs += '<div class="swiper-slide">';
                $trs += '<div style="padding-bottom:100px" class="carousel-caption">';
                $trs += '<h3>' + item.Name + '</h3>';
                $trs += '<p>' + item.Description + '</p>';
                $trs += '</div>';
                $trs += "<a href='/PlayMusic/Index?albumid=" + item.Id + "'><img src=" + item.UrlString + " class='lazyload'  style='transform: scale(0.8);'></a>";
                $trs += '</div>';
            })
            ele2.after($trs);
            Slideshow_hover();
        }



        function Slideshow_hover() {
            $(".lazyload").hover(
                function () {
                    //mouseover
                    $(this).css({ "transform": "scale(1.0)" });//移上字体变蓝dao
                }, function () {
                    //mouseout
                    $(this).css({ "transform": "scale(0.8)" });//移除字zhuan体变黑shu
                })
        }

        //在线播放
        //获取监听按钮的id后取值提交
        //$(".imgbtn").click(function () {
        //    var id = $(this).attr("id");
        //    var id = $("#" + id).val();
        //    post("/PlayMusic/Index", { 'albumid': id });
        //});




        //注册
        $("#signin").click(function () {
            if ($("#zc_pass").val() != $("#zc_pass2").val()) {
                alert("两次密码不一致！");
                return;
            }
            $(this).button('loading').delay(1000).queue(function () {
                $(this).button('reset');
                $(this).dequeue();
            });
            var datas = {};
            var t = $("#signindata").serializeArray();      // serializeArray() 方法通过序列化表单值来创建对象数组（名称和值）
            $.each(t, function () {                   // 遍历存入数组
                //value:数据  // name：属性名
                datas[this.name] = this.value;
            });

            $.post("/Home/CreateUser", datas, function (res) {
                if (res.code === 0) {
                    alert(res.msg);
                    window.location.reload();//刷新当前窗口
                } else {
                    alert(res.msg);
                    window.location.reload();//刷新当前窗口
                }

            }, 'json');
        });


        //登录
        $("#login").click(function () {
            $(this).button('loading').delay(10000).queue(function () {
                $(this).button('reset');
                $(this).dequeue();
            });
            var datas = {};
            var t = $("#logindata").serializeArray();      // serializeArray() 方法通过序列化表单值来创建对象数组（名称和值）
            $.each(t, function () {                   // 遍历存入数组
                //value:数据  // name：属性名
                datas[this.name] = this.value;
            });

            $.post("/Home/Check", datas, function (res) {
                //var resuces = JSON.parse(res);
                if (res.code === 0) {
                    $.cookie('icon', res.icon, { path: '/' });
                    $.cookie('name', res.name, { path: '/' });
                    alert(res.msg);
                    window.location.reload();//刷新当前窗口
                } else {
                    alert(res.msg);
                }

            }, 'json');
        });

        //清空缓存
        function Clear() {
            var cookies = $.cookie();
            for (var cookie in cookies) {
                $.removeCookie('name', { path: '/' });
                $.removeCookie(cookie);
            }
            var cookie = $.cookie("name")
            if (cookie == null) {
                return 0;
            }
        }


        //清空缓存退出登录
        function LoginOut() {
            var statu = Clear();
            $.post("/Home/Clear", function (res) {
                if (res == 0 & statu == 0) {
                    alert("注销成功");
                    location.href = "/home";
                }
            }, 'json');
        }


        //读取cookies
        function getCookie(name) {
            return $.cookie(name)
        };

        // 判断cookie是否为空
        function checkCookie(name) {
            if (getCookie(name) == null || getCookie(name) == "" || getCookie(name) == "null" || typeof (getCookie(name)) == "undefined" || getCookie(name) == false || getCookie(name) == undefined) {
                return true;
            } else {
                return false;
            }
        }

        //登录初始化用户信息页
        function loginInit() {
            var u = checkCookie("name");//判断cookie是否为空
            var icon = getCookie("icon");
            var name = getCookie("name");
            if (u == true) {
                $("#uinfo").hide();
            } else {
                $(".loginbtn").hide();
                $("#icon").attr("src", icon)
                $("#icon").after('<span>' + name + '<span class="caret"></span></span>');
            }

        }




        //上一页
        function Back() {

            if (Page - 1 < Page) {
                alert("已经是第一页咯");
                return false;
            }
            Page--;
            $.get("/Home/GetAlbumData", { "page": Page }, function (data, status) {
                datas = data.data;
                $(".del").remove();//清空上一页元素
                init(datas);
                styleinit();
            }, 'json');
        }

        //下一页
        function nextPage() {
            Page++;
            if (Page > pageCount) {
                alert("已经是最后一页咯");
                return false;
            }
            $.get("/Home/GetAlbumData", { "page": Page }, function (data, status) {
                datas = data.data;
                $(".del").remove();//清空上一页元素
                init(datas);
                styleinit();
            }, 'json');
        }

        //初始化数据
        function Initdata() {
            $.ajax({
                url: "/Home/GetAlbumData",
                type: "GET",
                async: true,
                dataType: "json",
                success: function (data) {
                    datas = data.data;
                    DataCount = data.count;
                    init(datas);
                    styleinit();
                    Slideshow(data.data);
                }
            });
        }






        //加载列表
        function init(datas) {
            $tr = ''; //清空页面元素
            //遍历数据
            $.each(datas, function (i, item) {
                $tr += '<div class="col-lg-3 col-md-6 col-sm-12 mb-3 del" id="download">';
                $tr += '<a href=""><img src="' + item.UrlString + '"style="height:300px; width:300px;" class="lazyload rounded"></a>';
                $tr += '<div class="text-left" id="down">';
                $tr += '<ul class="ml-1" >';
                $tr += '<li class="my-2" ><a href="">' + "专辑名称：" + item.Name + '</a></li>';
                $tr += '<li class="my-2"><a href="">' + "歌手：" + item.ArtistName + '</a></li>';
                $tr += '<li class="my-2"><a href="">' + "简介：" + item.Description + '</a></li>';
                $tr += '<li class="my-2"><a href="">' + "售价：" + item.Price + '</a></li>';
                $tr += '</ul>';
                $tr += '</div>';
                $tr += '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;';
                $tr += '<button style="margin-left:30px;" type="button"  value="' + item.Id + '" id="play' + i + '" class="btn btn-default play" >在线播放</button>';
                $tr += '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;';
                $tr += '<button type="button" value="' + item.Id + '"  id="join' + i + '" class="btn btn-default join">加入购物车</button>';
                $tr += '</div>';
            })
            ele.before($tr);
            //在线播放
            //获取监听按钮的id后取值提交
            $(".play").click(function () {
                var id = $(this).attr("id");
                var id = $("#" + id).val();
                post("/PlayMusic/Index", { 'albumid': id });
            });


            //加入购物车
            $(".join").click(function () {
                var id = $(this).attr("id");
                var id = $("#" + id).val();
            
                $.post("/Home/CreateShoppingcartItems", { 'albumid': id }, function (res) {
                    if (res.code == 0) {
                        alert(res.msg);
                    } else {
                        alert(res.msg);
                    }

                }, 'json');

            });
            Limit();

        }

        function Limit() {
            $("#Page").html('当前第' + Page + '页');
            pageCount = DataCount / limit;//总页数
            var p = Math.ceil(pageCount);
            if (pageCount > p) //判断是否为整数
            {
                pageCount = Math.ceil(pageCount + 1);//取整加1
            } else if (p <= 1) {
                pageCount = 1;
            } else if (pageCount < p) {
                pageCount = Math.ceil(pageCount);
            }
            $("#pageCount").html('共' + pageCount + '页');
        }

        //隐藏参数请求
        function post(URL, PARAMS) {
            var temp_form = document.createElement("form");
            temp_form.action = URL;
            temp_form.target = "_blank";
            temp_form.method = "post";
            temp_form.style.display = "none";
            for (var x in PARAMS) {
                var opt = document.createElement("textarea");
                opt.name = x;
                opt.value = PARAMS[x];
                temp_form.appendChild(opt);
            }
            document.body.appendChild(temp_form);
            temp_form.submit();
        }




        //加载样式
        function styleinit() {
            $("#content>div").mouseover(function () {
                var index = $(this).index();
                $("#content>div:eq(" + index + ")>a>img").css({
                    "transform": "scale(1.05)",
                    "transition": ".5s"
                });
                $("#content>div:eq(" + index + ")>div").show(100);
            }).mouseleave(function () {
                var index = $(this).index();
                $("#content>div:eq(" + index + ")>div").hide(100);
                $("#content>div:eq(" + index + ")>a>img").css({
                    "transform": "scale(1)",
                    "transition": ".5s"
                });
            });

            $("#case7>div>div>img").hover(function () {
                $(this).css({
                    "transform": "scale(1.5)",
                    "transition": "1s"
                })
            }, function () {
                $(this).css({
                    "transform": "scale(0.8)",
                    "transition": "1s"
                })
            });

            $("#headlabel li").hover(function (even) {
                var index = $(this).index();
                $("#headlabel>li:eq(" + index + ")").animate({
                    left: '+5px',
                }, "slow");
            }, function () {
                var index = $(this).index();
                $("#headlabel>li:eq(" + index + ")").animate({
                    left: '0px',
                }, 100);
            });
        }

    </script>
