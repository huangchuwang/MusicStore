            //            return '售价不能小于1';
            //        }
            //    }
            //});

            //form.verify({
            //    name: function (value) {
            //        if (value == "") {
            //            return '专辑名称不能为空';
            //        }
            //        if (!new RegExp("^[a-zA-Z0-9_\u4e00-\u9fa5\\s·]+$").test(value)) {
            //            return '专辑名称不能有特殊字符';
            //        } else if (value.length < 2) {
            //            return '专辑名称不能少于两个字符';
            //        }
            //    }
            //    , price: function (value) {
            //        if (value < 1) {
            //            return '售价不能小于1';
            //        }
            //    }

            //});

            form.on('switch(stat)', function (data){
                var contexts;
                var sta;
                var x = data.elem.checked;//判断开关状态
                if (x == true) {     
                    //sta = 1;
                    $.post("/RoleManagemen/RoleSwitch",{ 'sta': 1, 'id': data.value }, function (res) {
                        layer.msg(res.msg);
                    },'json');
                } else {    
                    //sta = 0;
                    $.post("/RoleManagemen/RoleSwitch", { 'sta': 0, 'id': data.value }, function (res) {
                        layer.msg(res.msg);
                    },'json');
                }
            });

            form.on('submit(data-search-btn)', function (data) {
                var title = data.field.title;
                if (data == '') {
                    table.reload('currentTableId', 'data');
                    return false;
                }


                //执行搜索重载表格
                table.reload('currentTableId', {
                    url: "/RoleManagemen/GetOneRole", //搜索接口
                    page:{
                        curr: 1
                    }
                    , where:{
                        title: title,
                    }
                });

                return false;
            });



            /**
             * toolbar监听事件
             */
            //添加
            table.on('toolbar(currentTableFilter)', function (obj) {
                if (obj.event === 'add') {
                    var path;
                    layer.open({
                        type: 1,
                        area: ['50%', '80%'],
                        title: '添加用户',
                        shade: false,//父窗体不可点击
                        shadeClose: true,
                        content: $('#addAdminUser').html(),
                        success: function (layero, dIndex) {

                            // 表单提交事件
                            form.on('submit(saveBtn)', function (data) {
                                layer.load(2);
                                $.post("/UsersManagemen/CreateUsers", data.field, function (res) {
                                    layer.closeAll('loading');
                                    if (res.code == 0) {
                                        layer.close(dIndex);
                                        layer.msg(res.msg, { icon: 1 });
                                        table.reload('currentTableId');
                                    } else {
                                        layer.msg(res.msg, { icon: 2 });
                                    }
                                }, 'json');
                                return false;
                            });

                        }
                    });

                }
            });


            table.on('tool(currentTableFilter)', function (obj) {
                var data = obj.data;
                var path;
                if (obj.event === 'edit') {

                    layer.open({
                        type: 1,
                        area: ['50%', '80%'],
                        title: '编辑用户',
                        shadeClose: true,
                        content: $('#editAdminUser').html(),
                        success: function (layero, dIndex) {
                         form.val('modeleditAdmin', data);//回显数据

                            // 表单提交事件
                            form.on('submit(saveBtn)', function (data) {
                                layer.load(2);
                                $.post("/RoleManagemen/EditRoles", data.field, function (res) {
                                    layer.closeAll('loading');
                                    if (res.code == 0) {
                                        layer.close(dIndex);
                                        layer.msg(res.msg, { icon: 1 });
                                        table.reload('currentTableId');
                                    } else {
                                        layer.msg(res.msg, { icon: 2 });
                                    }
                                }, 'json');
                                return false;
                            });
                        }
                    });

                    return false;
                } else if (obj.event === 'addlrc') {
                    layer.open({
                        type: 1,
                        area: ['50%', '80%'],
                        title: '规则列表',
                        shade: false,//父窗体不可点击
                        shadeClose: true,
                        content: $('#AddLrcData').html(),
                        success: function (layero, dIndex) {
                        form.val('modeleditAdmin', data);//回显数据

                            // 表单提交事件
                            form.on('submit(saveBtn)', function (data) {
                                layer.load(2);
                                $.post("CreateLrcFile", data.field, function (res) {
                                    layer.closeAll('loading');
                                    if (res.code == 0) {
                                        layer.close(dIndex);
                                        layer.msg(res.msg, { icon: 1 });
                                        table.reload('currentTableId');
                                    } else {
                                        layer.msg(res.msg, { icon: 2 });
                                    }
                                }, 'json');
                                return false;
                            });

                        }
                    });

                } else if (obj.event === 'delete') {
                    layer.confirm('确认删除 ' + data.Title + " ?", function (index) {
                        $.post("/UsersManagemen/Delete", { 'id': data.Id }, function (res) {
                            if (res.code == 0) {
                                obj.del();
                                layer.msg(res.msg, { icon: 1 });//提示说明
                                table.reload('currentTableId'); //重载表格
                                layer.close(index);//再执行关闭
                            } else {
                                layer.msg(res.msg, { icon: 2 });
                            }
                        }, 'json');
                    });
                }
            });
        });
    </script>
</body>
</html>